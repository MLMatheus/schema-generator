{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "type": "object",
    "properties": {
        "nome": {
            "type": "string"
        },
        "sobrenome": {
            "type": "string"
        },
        "sexo": {
            "type": "string"
        },
        "idade": {
            "type": "integer"
        },
        "altura": {
            "type": "number"
        },
        "hobs": {
            "type": "array",
            "itens": {
                "type": "object"
            }
        },
        "gosta_de": {
            "type": "string"
        },
        "familiares": {
            "type": "array",
