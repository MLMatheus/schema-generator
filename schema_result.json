                    "nome": {
                        "type": "string"
                    },
                    "relacao": {
                        "type": "string"
                    }
                },
                "required": [
                    "nome",
                    "relacao"
                ]
            }
        },
        "nacionalidade": {
            "type": "string"
        },
        "menor_de_18": {
            "type": "boolean"
        },
        "salario": {
            "type": "null"
        }
    },
    "required": [
        "nome",
        "sobrenome",
        "sexo",
        "idade",
        "altura",
        "hobs",
        "gosta_de",
        "familiares",
        "nacionalidade",
        "menor_de_18",
        "salario"
    ]
}